<Page
    x:Class="PeopleHubMobile.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PeopleHubMobile"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource HubBackgroundImageBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Hub Margin="0,15,0,5" x:Name="Hub" x:Uid="Hub" Header="application name" Background="{ThemeResource HubBackgroundImageBrush}">
        </Hub>
        <StackPanel Grid.Row="1" Margin="73,70,73,0">
            <StackPanel  HorizontalAlignment="Left" Height="60" Margin="0,10,0,0" Width="254" >
                <TextBox Background="#FFFCFCFC"  TextWrapping="Wrap" x:Name="UserName"  PlaceholderText="Username" FontSize="25" Margin="0.25,0,-0.416,0" Height="62" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Text="Admin">
                    <TextBox.RenderTransform>
                        <CompositeTransform SkewY="0.522" TranslateY="0.824"/>
                    </TextBox.RenderTransform>
                </TextBox>
            </StackPanel>
            <StackPanel  HorizontalAlignment="Left" Height="60" Margin="0,10,0,0" Width="327" >
                <PasswordBox  Background="#FFFCFCFC" x:Name="Password"  PlaceholderText="Password" FontSize="20"   Margin="0,0,72.667,0" Height="58" Password="Welcome123" />
            </StackPanel>
            <StackPanel Margin="0,10,0,0">
                <Button x:ConnectionId='1'  Width="254" Height="73" Content="Login" Background="#FFFF9000"                     ></Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Background="#FFE7E8EC" Grid.Row="2" Margin="70">
            <Image Source= "Assets\MT_logo_footer.png"/>
        </StackPanel>
    </Grid>
</Page>

